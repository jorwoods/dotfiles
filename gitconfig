[user]
    name = "Jordan Woods"
    email = "13803242+jorwoods@users.noreply.github.com"

[include]
    path = ~/.gitconfig_local

[core]
	editor = nvim

[alias]
	a = add
	b = branch
	c = commit
	f = fetch --all --prune
	co = checkout
	cp = cherry-pick
	stat = status
	amend = !git commit --amend --no-edit
	pfwl = !git push --force-with-lease

[rebase]
	autoStash = true

[rerere]
    enabled = true

[diff]
    algorithm = histogram
    colorMoved = default
    tool = nvimdiff

[difftool "nvimdiff"]
    layout = "@LOCAL,REMOTE"

[merge]
    conflictstyle = diff3
    tool = nvimdiff

[mergetool]
    prompt = true

[mergetool "nvimdiff"]
	layout = LOCAL,BASE,REMOTE / MERGED + BASE,LOCAL + BASE,REMOTE

[push]
    autoSetupRemote = true

[init]
	defaultBranch = main

[stash]
    showPatch = true
